<script>
    $('#register').submit((e)=>{
         e.preventDefault()
         $.ajax({
             type:'POST',
             url:$(this).action,
             data:$('#register').serialize(),
             beforeSend: function(){

             },
             success:function(data){
                 if(data === "success"){
                     $('.alert').addClass("alert-success")
                     $('.alert').html("Votre compte a été créer veuillez vérifier votre boite mail")
                 }else{
                     $('.alert').addClass("alert-danger")
                    $('.alert').attr('hidden',false)
                    $('.alert').html(data)
                 }
             }
         })
    })
</script>